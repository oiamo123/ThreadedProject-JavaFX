        </columnConstraints>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="btnAccept" mnemonicParsing="false" text="Button">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnExit" mnemonicParsing="false" text="Exit">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
        </buttons>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <top>
      <Label fx:id="lblMode" text="Label" BorderPane.alignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
